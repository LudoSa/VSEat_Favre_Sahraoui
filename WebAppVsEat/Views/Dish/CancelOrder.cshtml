@model DTO.Order

@{
    ViewData["Title"] = "CancelOrder";
}

<h2>CancelOrder</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CancelOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdOrder" type="hidden" class="form-control" />
                <span asp-validation-for="IdOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Ready">Ready</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Delivery_time" type="hidden" class="form-control" />
                <span asp-validation-for="Delivery_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdCustomer" type="hidden" class="form-control" />
                <span asp-validation-for="IdCustomer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdCourier" type="hidden" class="form-control" />
                <span asp-validation-for="IdCourier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="CustomerName" type="hidden" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Quantity" type="hidden" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Price" type="hidden" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DishName" type="hidden" class="form-control" />
                <span asp-validation-for="DishName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Address" type="hidden" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cancel" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


