@model IEnumerable<WebAppVsEat.Models.OrderDishmodel>

@{
    ViewData["Title"] = "DishesRestaurant";
}

<h2>DishesRestaurant</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>

            </th>
            <th>
                Delivery Time
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
