                    @Html.DisplayFor(modelItem => item.dish.Price)
                </td>
                <td>
                </td>
                <td>
                   
                </td>
                <td>
                    <input class="form-control" type="number" value="@item.Quantity" min="0" style="width:50px;" />
                </td>
                <td>
                </td>
            </tr>

        }

    </tbody>
    
</table>
<button>
    @Html.ActionLink("Cart", "Details", "Cart", new {  id=item.PrimaryKey })
</button>
