@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "getRestaurants";
}

<h2>Restaurants</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                <b>The Restaurants</b>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @{
                    string pic = item.Merchant_name + ".jpg";
                    <a href="Details/@item.IdRestaurant">
                        <img src="~/images/@pic" alt="ASP.NET" class="img-responsive" style="width:550px;height:309px;" />
                    </a>
                }
                <b>@Html.DisplayFor(modelItem => item.Merchant_name)</b>
                <br />
                @Html.DisplayFor(modelItem => item.Address)
                <br />
                @{
                    List<string> list = ViewData["Address"] as List<string>;

                    @list[item.IdRestaurant - 1]
                }
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.IdRestaurant })
            </td>
            
        </tr>
}
    </tbody>
</table>
